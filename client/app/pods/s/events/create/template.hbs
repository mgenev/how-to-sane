{{outlet}}

<div class="container">
	<div class="page-header">
        <h2>Create Event</h2>
    </div>
	<form {{action 'createEvent' on='submit'}}>
	    <div class="form-group">
	        <label for="title">Title</label>
	        {{input type="text" id="title" value=title class='form-control' autofocus=true}}
	    </div>
        <div class="form-group">
	        <label for="date">Date</label>
            {{date-picker id="date" autoclose=true valueFormat="" date=eventDate format="MM-DD-YYYY" allowBlank=true  placeholder="Enter event date"}}&nbsp;<span {{action "clearDate"}} class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
	    </div>
		<div class="form-group">
	        <label for="address">Address</label>
	        {{input type="text" id="address" value=address class='form-control' autofocus=true}}
	    </div>
	    <div class="form-group">
	        <label for="description">Description</label>
	        {{textarea value=description id="description" class='form-control'}}
	    </div>
	    <button class="btn btn-default" {{action 'createEvent' model}}>Create Event</button>
	</form>
</div>
